{
  "name": "@nodly/remix-template",
  "version": "1.0.0",
  "description": "Simple starter template for Remix",
  "author": "Nodly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodly/remix-template.git"
  },
  "sideEffects": false,
  "scripts": {
    "lint": "eslint app/**/*.{js,jsx,ts,tsx}",
    "test": "jest",
    "build": "run-s 'build:*'",
    "build:css": "yarn generate:css --minify",
    "build:remix": "remix build",
    "dev": "run-p 'dev:*'",
    "dev:css": "yarn generate:css --watch",
    "dev:remix": "remix dev",
    "generate:css": "npx tailwindcss -i ./styles/global.css -o ./app/styles/global.css",
    "start": "remix-serve build",
    "postinstall": "run-s 'postinstall:*'",
    "postinstall:husky": "husky install",
    "postinstall:remix": "remix setup node"
  },
  "packageManager": "yarn@3.2.3",
  "dependencies": {
    "@remix-run/node": "1.7.2",
    "@remix-run/react": "1.7.2",
    "@remix-run/serve": "1.7.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@nodly/prettier-config": "1.0.4",
    "@remix-run/dev": "1.7.2",
    "@remix-run/eslint-config": "1.7.2",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/line-clamp": "0.4.2",
    "@tailwindcss/typography": "0.5.7",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "autoprefixer": "10.4.12",
    "esbuild-jest": "0.5.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "8.0.1",
    "jest": "29.0.3",
    "jest-environment-jsdom": "29.0.3",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.16",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.3"
  }
}
